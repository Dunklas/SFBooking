<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping.dtd">

<hibernate-mapping>
  <class name ="FishingSafari" table="FISHINGSAFARI">
    <meta attribute="class-description">
      This class contains the details of fishing safaris.
    </meta>
    <id name="id" type "int" column="SAFARI_ID">
      <generator class="native"/>
    </id>
    <component name="safariDestination" class="SafariDestination">
      <property name="location" column="LOCATION" type="string"/>
      </component>
      <property name="startDate" column="START_DATE" type="date"/>
      <property name="endDate" column="END_DATE" type="date"/>
      <property name="status" column="STATUS" type="int"/>
  </class>
</hibernate-mapping>
