<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping.dtd"> 

<hibernate-mapping>
  <class name="SafariDestination" table="SAFARIDESTINATION">
    <meta attribute="class-description">
      This class contains the detail of safari destinations.
    </meta>
    <id name= "location" type "string" column="location">
      <generator class="native"/>
    </id>
    <property name="equipmentReq" column="FIRST_NAME" type="string"/>
    <property name="maxParticipants" column="MAX_PARTICIPANTS" type="int"/>
    <property name="guide" column="GUIDE" type="string"/>
    <property name="terrain" column="TERRAIN" type="string"/>
    <property name="active" column="ACTIVE" type="boolean"/>
  </class>
</hibernate-mapping>
